% Funci贸n de transferencia del horno
G = tf([1], [1 10 20])
% Controlador PID inicial
Kp = 110;
Ki = 200;
Kd = 10;
PID = pid(Kp, Ki, Kd);
% Sistema en lazo cerrado
T = feedback(PID * G, 1);
t=20;
% Simulaci贸n de la respuesta al escal贸n
subplot(1, 2, 1);
step(G);
subplot(1, 2, 2);
step(T, 3);
grid on
title('Respuesta al escal贸n del sistema con PID')
xlabel('Tiempo (s)')
ylabel('Temperatura simulada')
